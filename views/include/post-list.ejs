<table style="width:70%; margin-left: auto; margin-right: auto;">
    <tr>
        <th style="height:30px; text-align:left; width:5%">S.No.</th>
        <th style="height:30px; text-align:left; width:50%">Titles</th>
        <th style="height:30px; text-align:left; width:20%">Task By</th>
        <th style="height:30px; text-align:left; width:10%">Visibility</th>
        <th style="height:30px; text-align:left; width:5%">Action</th>
    </tr>

    <% for (let i=0; i < tasks.length; i++) { %>
        
        <% let task=tasks[i]; %>
        <tr>
            <td style="text-align:center;">
                <%= i + 1 %>
            </td>
            <td style="text-align:left;">
                <a href="/task-detail/<%= task.id %>"><%= task.title %></a>
            </td>
            <td style="text-align:left;">
                <a href="/profile/<%= task.taskBy._id %>"><%= task.taskBy.name %></a>
            </td>
            <td style="text-align:left;">
                <%= task.visibility %>
            </td>
            <td>
                <% if (loginUser && loginUser._id == task.taskBy._id) { %>
                <a href="/task-delete/<%= task.id %>">Delete</a>
                <% } %>
            </td>
        </tr>
    <% } %>
    </table>
